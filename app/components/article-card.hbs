<div
  class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-colors duration-200"
>
  <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
    <LinkTo
      @route="articles.show"
      @model={{@article.id}}
      class="hover:text-blue-600 dark:hover:text-blue-400"
    >
      {{@article.title}}
    </LinkTo>
  </h2>
  <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
    {{@article.content}}
  </p>
  <div class="flex justify-between items-center text-sm">
    <span
      class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 px-2 py-1 rounded"
    >
      {{@article.category}}
    </span>
    <div class="text-gray-500 dark:text-gray-400">
      <div>{{@article.author}}</div>
      <div>{{format-date @article.publishDate}}</div>
    </div>
  </div>
</div>